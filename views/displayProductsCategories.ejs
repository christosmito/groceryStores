<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../css/displayProducts.css">
    <link rel="stylesheet" href="../css/footer.css">
    <link rel="stylesheet" href="../css/sideNavBar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <title><%= title %></title>
</head>
<body>
    <%- include("includes/sideNavBar.ejs") %>
    <%- include("includes/searchNavBar.ejs") %>
    <main>
      <p><a href="<%= breadcrumb[breadcrumb.length - 2].url %>"><%= breadcrumb[breadcrumb.length - 2].url %></a></p>
    <h1>Αποτελέσματα για <%= title %></h1>
    <% products.forEach(function(product){ %>
        <div class="productWrapper">
          <div class="flexWrapper"><a href="/search/products?query=<%= query %>&category=<%= product.category.category %>"><img src=<%= product.image %> alt=""></a></div> 
          <div class="flexWrapper">
            <h1><%= product.category.category %></h1>
            <h3>(<%= product.totalProducts %>)</h3>
          </div>
        </div>
    <% }); %>
    </main>
    <%- include("includes/footer.ejs") %>
    
    <script src="/js/sideNavBar.js"></script>
    <script src="/js/productsModal.js"></script>
    <script src="/js/profileModal.js"></script>
    <script src="/js/pagination.js"></script>
    <script src="/js/checkBoxPersist.js"></script>
</body>
</html>